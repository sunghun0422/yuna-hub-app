{
  "functions": {
    "api/*.js": { "runtime": "nodejs18.x" }
  },
  "routes": [
    { "src": "/health", "dest": "/api/health" },
    { "src": "/api/health", "dest": "/api/health" },

    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/index" },
    { "src": "/\\.well-known/(.*)", "dest": "/public/.well-known/$1" }
  ]
}
