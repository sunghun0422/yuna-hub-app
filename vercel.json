{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@2.15.10",
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "/", "dest": "/api/index.js" }
  ]
}
