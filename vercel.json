{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/github-read.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "/(.*)", "status": 404, "dest": "/api/index.js" }
  ]
}
